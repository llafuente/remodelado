          {"id": "user", "label": "User"}
        ],
        "list": 5
      },
      "permissions": {
        "type": "checklist",
        "labels": [
          {"id": "get users", "label": "Ver usuarios"},
          {"id": "post users", "label": "Crear usuarios"},
          {"id": "patch users", "label": "Modificar usuarios"},
