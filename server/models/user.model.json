{
  "singular": "user",
  "backend": {
    "collection": "users",
    "prefix": "/api",
    "permissions": {
      "read": "Ver usuarios",
      "list": "Listar usuarios",
      "create": "Crear usuarios",
      "update": "Modificar usuarios",
      "delete": "Borrar usuarios"
    },

    "schema": {
      "id": {
        "label": "ID",

        "type": "number",
        "create": false,
        "update": false
      },
      "username": {
        "label": "Username",
        "type": "string",
        "required": true,
        "maxlength": 254,
        "restricted": true,
        "create": true,
        "update": true
      },
      "password": {
        "label": "Password",
        "type": "string",
        "required": true,
        "create": true,
        "update": true
      },
      "salt": {
        "label": "",
        "type": "string",
        "restricted": true
      },
      "roles": {
        "label": "Roles",
        "type": "array",
        "array": {
          "type": "string",
          "enum": ["admin", "user"],
          "labels": ["Admin", "User"]
        },
        "create": true,
        "update": true
      },
      "permissions": {
        "label": "Permissions",
        "type": "array",
        "array": {
          "type": "ObjectId",
          "ref": "permissions"
        },
        "create": true,
        "update": true
      }
    }
  },
  "frontend": {
    "navbar": {
      "label": "Users"
    },
    "buttons": {
      "list_create": {
        "text": "Crear new user"
      },
      "update": {
        "text": "Save user",
        "tooltip": "Edit user",
        "inprogress": "Saving"
      },
      "create": {
        "text": "Create user",
        "inprogress": "Creating"
      },
      "delete": {
        "tooltip": "Remove user",
        "alert": "Are you sure to delete selected user?"
      }
    },
    "list": {
      "id": {
        "type": "number"
      },
      "username": {
        "type": "text"
      },
      "roles": {
        "type": "select"
      },
      "created_at": {
        "label": "Created at",
        "type": "date-range"
      }
    },
    "schema": {
      "id": {
        "type": "static",
        "create": false,
        "update": true
      },
      "username": {
        "type": "email"
      },
      "password": {
        "type": "password",
        "restricted": true
      },
      "roles": {
        "type": "checklist",
        "source_url": {
          "method": "GET",
          "url": "/api/roles"
        }
      },
      "permissions": {
        "type": "checklist",
        "source_url": {
          "method": "GET",
          "url": "/api/permissions"
        }
      }
    }
  }
}
