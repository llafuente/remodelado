{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for backend model and fontend interface",

  "definitions": {},

  "id": "/",
  "type": "object",
  "required": ["singular", "backend", "frontend"],
  "additionalProperties": false,
  "properties": {
    "singular": {
      "id": "singular",
      "type": "string"
    },
    "backend": {
      "id": "backend",
      "type": "object",
      "required": ["schema", "permissions"],
      "properties": {
        "ignore_perm_err": {
          "id": "backend/ignore_perm_err",
          "type": "boolean"
        },
        "prefix": {
          "id": "backend/prefix",
          "type": "string"
        },
        "collection": {
          "id": "backend/collection",
          "type": "string"
        },
        "permissions": {
          "id": "backend/permissions",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "read": {
              "type": ["string", "boolean"]
            },
            "list": {
              "type": ["string", "boolean"]
            },
            "create": {
              "type": ["string", "boolean"]
            },
            "update": {
              "type": ["string", "boolean"]
            },
            "delete": {
              "type": ["string", "boolean"]
            }
          }
        },
        "schema": {
          "id": "backend/schema",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "type": "object",
              "required": ["label"],
              "additionalProperties": false,
              "properties": {
                "label": {
                  "id": "backend/schema/label",
                  "type": "string"
                },
                "type": {
                  "id": "backend/schema/type",
                  "enum": [
                    "string",
                    "number",
                    "ObjectId",
                    "array",
                    "mixed"
                  ]
                },
                "required": {
                  "id": "backend/schema/required",
                  "type": "boolean"
                },
                "maxlength": {
                  "id": "backend/schema/maxlength",
                  "type": "number"
                },
                "minlength": {
                  "id": "backend/schema/minlength",
                  "type": "number"
                },
                "min": {
                  "id": "backend/schema/min",
                  "type": "number"
                },
                "max": {
                  "id": "backend/schema/max",
                  "type": "number"
                },
                "match": {
                  "id": "backend/schema/match",
                  "type": "number"
                },
                "restricted": {
                  "id": "backend/schema/restricted",
                  "type": ["string", "boolean"]
                },
                "create": {
                  "id": "backend/schema/create",
                  "type": "boolean"
                },
                "update": {
                  "id": "backend/schema/update",
                  "type": "boolean"
                },
                "enum": {
                  "id": "backend/schema/enum",
                  "type": "array"
                },
                "labels": {
                  "id": "backend/schema/labels",
                  "type": "array"
                },
                "default": {
                  "id": "backend/schema/labels"
                },
                "array": {
                  "id": "backend/schema/array",
                  "type": "object"
                },
                "required": {
                  "id": "backend/schema/required",
                  "type": "boolean"
                },
                "ref": {
                  "id": "backend/schema/ref",
                  "type": "string"
                },
                "set_current_user": {
                  "id": "backend/schema/set_current_user",
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "frontend": {
      "id": "frontend",
      "type": "object",
      "required": ["schema", "navbar"],
      "properties": {
        "navbar": {
          "id": "frontend/navbar",
          "type": "object",
          "properties": {
            "label": {
              "id": "frontend/navbar/label",
              "type": "string"
            }
          }
        },
        "schema": {
          "id": "frontend/schema",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": ["text", "number", "email", "password", "date", "select", "checklist", "static", "textarea"]
                }
              }
            }
          }
        }
      }
    }
  }
}
