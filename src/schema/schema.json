{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for backend model and fontend interface",

  "definitions": {
    "backend_schema": {
      "oneOf": [{
        "$ref": "#/definitions/backend_schema_item"
      },{
        "$ref": "#/definitions/backend_schema_array"
      }]
    },
    "backend_schema_array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/backend_schema_item"
      }
    },
    "backend_schema_item": {
      "type": "object",
      "required": ["label"],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "type": {
          "enum": [
            "String",
            "Number",
            "ObjectId",
            "Array",
            "Mixed"
          ]
        },
        "required": {
          "type": "boolean"
        },
        "maxlength": {
          "type": "number"
        },
        "minlength": {
          "type": "number"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "match": {
          "type": "number"
        },
        "restricted": {
          "oneOf": [{
            "type": "boolean"
          },{
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "read": {
                "type": ["string", "boolean"]
              },
              "create": {
                "type": ["string", "boolean"]
              },
              "update": {
                "type": ["string", "boolean"]
              }
            }
          }]
        },
        "enum": {
          "type": "array"
        },
        "labels": {
          "type": "array"
        },
        "default": {
          "type": ["array", "boolean", "integer", "number", "null", "object", "string" ]
        },
        "items": {
          "type": "object"
        },
        "required": {
          "type": "boolean"
        },
        "ref": {
          "type": "string"
        },
        "set_current_user": {
          "type": "boolean"
        }
      }
    }
  },

  "id": "",
  "type": "object",
  "required": ["singular", "backend", "frontend"],
  "additionalProperties": false,
  "properties": {
    "singular": {
      "id": "singular",
      "type": "string"
    },
    "backend": {
      "id": "backend",
      "type": "object",
      "required": ["schema", "permissions"],
      "properties": {
        "ignore_perm_err": {
          "id": "backend/ignore_perm_err",
          "type": "boolean"
        },
        "prefix": {
          "id": "backend/prefix",
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "collection": {
              "id": "backend/collection",
              "type": "string"
            }
          }
        },
        "permissions": {
          "id": "backend/permissions",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "read": {
              "type": ["string", "boolean"]
            },
            "list": {
              "type": ["string", "boolean"]
            },
            "create": {
              "type": ["string", "boolean"]
            },
            "update": {
              "type": ["string", "boolean"]
            },
            "delete": {
              "type": ["string", "boolean"]
            }
          }
        },
        "schema": {
          "id": "backend/schema",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "$ref": "#/definitions/backend_schema"
            }
          }

        }
      }
    },
    "frontend": {
      "id": "frontend",
      "type": "object",
      "required": ["schema", "navbar"],
      "properties": {
        "navbar": {
          "id": "frontend/navbar",
          "type": "object",
          "properties": {
            "label": {
              "id": "frontend/navbar/label",
              "type": "string"
            }
          }
        },
        "schema": {
          "id": "frontend/schema",
          "type": "object",
          "patternProperties": {
            "[a-z0-9_]": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": ["text", "number", "email", "password", "date", "select", "checklist", "static", "textarea"]
                }
              }
            }
          }
        }
      }
    }
  }
}
