{
  "singular": "user",
  "backend": {
    "options": {
      "collection": "users"
    },
    "prefix": "/api",
    "permissions": {
      "read": "Ver usuarios",
      "list": "Listar usuarios",
      "create": "Crear usuarios",
      "update": "Modificar usuarios",
      "delete": "Borrar usuarios"
    },

    "schema": {
      "id": {
        "label": "ID",

        "type": "Number",
        "create": false,
        "update": false
      },
      "username": {
        "label": "Username",
        "type": "String",
        "required": true,
        "maxlength": 254,
        "create": true,
        "update": true
      },
      "password": {
        "label": "Password",
        "type": "String",
        "required": true,
        "restricted": true,
        "create": true,
        "update": true
      },
      "salt": {
        "label": "",
        "type": "String",
        "restricted": true
      },
      "roles": [{
        "label": "Roles",
        "type": "ObjectId",
        "ref": "roles",
        "create": true,
        "update": true
      }],
      "permissions": [{
        "label": "Permissions",
        "type": "String",
        "ref": "permissions",
        "create": true,
        "update": true
      }],
      "state": {
        "label": "Estado",
        "type": "String",
        "enum": ["active", "banned"],
        "labels": ["Active", "Banned"],
        "default": "active",
        "update": true
      }
    }
  },
  "frontend": {
    "navbar": {
      "label": "Users"
    },
    "buttons": {
      "list_create": {
        "text": "Crear new user"
      },
      "update": {
        "text": "Save user",
        "tooltip": "Edit user",
        "inprogress": "Saving"
      },
      "create": {
        "text": "Create user",
        "inprogress": "Creating"
      },
      "delete": {
        "tooltip": "Remove user",
        "alert": "Are you sure to delete selected user?"
      }
    },
    "list": {
      "id": {
        "type": "number"
      },
      "username": {
        "type": "text"
      },
      "roles": {
        "type": "select",
        "source_url": {
          "method": "GET",
          "url": "/api/roles"
        }
      },
      "state": {
        "label": "Estado",
        "type": "select"
      },
      "created_at": {
        "label": "Created at",
        "type": "date-range"
      }
    },
    "schema": {
      "id": {
        "type": "static",
        "create": false,
        "update": true
      },
      "username": {
        "type": "email"
      },
      "password": {
        "type": "password",
        "restricted": true
      },
      "state": {
        "label": "Estado",
        "type": "select",
        "create": false
      },
      "roles": {
        "type": "checklist",
        "source_url": {
          "method": "GET",
          "url": "/api/roles"
        }
      },
      "permissions": {
        "type": "checklist",
        "source_url": {
          "method": "GET",
          "url": "/api/permissions"
        }
      }
    }
  }
}
