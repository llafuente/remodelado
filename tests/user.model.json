{
  "name": "user",
  "schema": {
    "id": {
      "label": "ID",

      "type": "number",
      "create": false,
      "update": false,

      "display": {
        "type": "static",
        "list": 1,
        "create": true,
        "update": true
      }
    },
    "first_name": {
      "label": "First Name",

      "type": "string",
      "required": true,
      "create": true,
      "update": true,

      "display": {
        "type": "text",
        "list": 2
      }
    },
    "last_name": {
      "label": "Last name",

      "type": "string",
      "required": true,
      "create": true,
      "update": true,

      "display": {
        "type": "text",
        "list": 3
      }
    },
    "role": {
      "label": "Role",

      "type": "string",
      "enum": ["admin", "user"],
      "create": true,
      "update": true,

      "display": {
        "type": "select",
        "list": 5
      }
    },
    "age": {
      "label": "Age",

      "type": "number",
      "create": true,
      "update": false,

      "display": {
        "type": "number",
        "list": 4
      }
    },
    "bio": {
      "label": "About myself",

      "type": "string",
      "create": true,
      "update": true,
      "default": null,

      "display": {
        "type": "textarea"
      }
    }
  },
  "mongoose": {
    "collection": "users"
  },
  "angular": {

  }

}
